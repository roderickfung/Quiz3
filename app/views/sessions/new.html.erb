<div class='product-header sm-form-head'>
  <div class='row'>
    <div class='col-sm-offset-2'>
      <h1>User Sign In</h1>
    </div>
  </div>
</div>


<div class='product-body sm-form-head'>
  <%= form_tag sessions_path, method: :post, class: 'form-horizontal' do%>
    <div class='form-group'>
      <%= label_tag :email, nil, class:'control-label col-sm-2'%>
      <div class='col-sm-4'>
        <%= email_field_tag :email, nil, class:'form-control span4'%>
      </div>
    </div>
    <div class='form-group'>
      <%= label_tag :password, nil, class:'control-label col-sm-2'%>
      <div class='col-sm-4'>
        <%= password_field_tag :password, nil, class:'form-control span4'%>
      </div>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag('Sign In', class:'btn btn-default') %>
    </div>
  <%end%>
</div>
